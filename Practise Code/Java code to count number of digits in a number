import java.util.Scanner;
 public class ReverseNumber
 {
 public static void main (String[] args)
 {
 int number, count=0;
 Scanner s1 = new Scanner (System.in);
 System.out.print ("Enter a number: ");
  number = s1.nextInt();
 do
 {
   number=number/10;
   count++;
 
 } while (number > 0);
 System.out.println ("The number of digits is :" +count);
 }
 } 
